{% extends 'base.html.twig' %}

{% block title %}Usuario{% endblock %}

{% block body %}
   <h1>Usuário</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>E-mail</th>
                <th>Senha</th>
                <th>Nivel de acesso</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                <td>{{ usuario.id }}</td>
                <td>{{ usuario.nome }}</td>
                <td>{{ usuario.eMail }}</td>
                <td>{{ usuario.senha }}</td>
                <td>{{ usuario.nivelAcesso }}</td>
                <td>
                    <a href="{{ path('usuario_show', {'id': usuario.id}) }}">Mostrar</a>
                    <a href="{{ path('usuario_edit', {'id': usuario.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('usuario_new') }}">Criar novo</a>
{% endblock %}
