{% extends 'base.html.twig' %}

{% block title %}Empresa{% endblock %}

{% block body %}
    <h1>Empresa</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Razão social</th>
                <th>CNPJ</th>
                <th>Endereco</th>
                <th>Telefone</th>
                <th>E-mail</th>
                <th>Ramo de atividade</th>
                <th>Número de funcionários</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for empresa in empresas %}
            <tr>
                <td>{{ empresa.id }}</td>
                <td>{{ empresa.razaoSocial }}</td>
                <td>{{ empresa.cnpj }}</td>
                <td>{{ empresa.endereco }}</td>
                <td>{{ empresa.telefone }}</td>
                <td>{{ empresa.email }}</td>
                <td>{{ empresa.ramoDeAtividade }}</td>
                <td>{{ empresa.numeroDeFuncionarios }}</td>
                <td>
                    <a href="{{ path('empresa_show', {'id': empresa.id}) }}">Mostrar</a>
                    <a href="{{ path('empresa_edit', {'id': empresa.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('empresa_new') }}">Criar novo</a>
{% endblock %}
