{% extends 'base.html.twig' %}

{% block title %}Editar Empresa{% endblock %}
{% block body %}
    <h1>Editar Empresa</h1>
{{ form_start(form) }}
  <div class="form-group">
    <div class="container">
      <div class="form-row">
        <div class="col-3 m-2">
          {{ form_label(form.razaoSocial) }} 
          {{ form_widget(form.razaoSocial, {'attr':{'class':'form-control'}}) }}
        </div>     
        <div class="col-3 m-2">
          {{ form_label(form.cnpj) }}
          {{ form_widget(form.cnpj, {'attr':{'class':'form-control'}}) }}
        </div>
         <div class="col-3 m-2">
          {{ form_label(form.endereco) }}
          {{ form_widget(form.endereco, {'attr':{'class':'form-control'}}) }}
        </div>
      </div>
    </div>
    <div class="container">
      <div class="form-row">       
        <div class="col-3 m-2">
          {{ form_label(form.telefone) }}
          {{ form_widget(form.telefone, {'attr':{'class':'form-control'}}) }}
        </div>      
        <div class="col-3 m-2">
          {{ form_label(form.email) }}
          {{ form_widget(form.email, {'attr':{'class':'form-control'}}) }}
        </div>  
        <div class="col-3 m-2">
          {{ form_label(form.ramoDeAtividade) }}
          {{ form_widget(form.ramoDeAtividade, {'attr':{'class':'form-control'}}) }}
        </div>
      </div>
    </div>
    <div class="container">
      <div class="form-row">
        <div class="col-3 m-2">
          {{ form_label(form.numeroDeFuncionarios) }}
          {{ form_widget(form.numeroDeFuncionarios, {'attr':{'class':'form-control'}}) }}
        </div>         
        <div class="col-6 m-4 text-right">
          <button type="submit" class="btn btn-primary">Submit</button> 
        </div>
      </div> 
    </div>  
  </div>         
    <div class="container">
      <div class="form-row col- ml-4 mb-0 text-right">
        {{ include('empresa/_form.html.twig', {'button_label': 'Update'}) }}
        {{ include('empresa/_delete_form.html.twig') }}
      </div> 
      <div style="font-weight:bold" class="form-row col-4 ml-4 mt-0 text-left">
        <a href="{{ path('empresa_index') }}">Back to List</a> 
      </div>
    </div>  
{% endblock %}

